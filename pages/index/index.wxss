/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.item {
  width: 50%;
  box-sizing: border-box;
  border: 1px solid #f9f9f9;
  padding: 5px;
}

.detail {
  display: flex;
  justify-content: space-between;
}

.item image {
  width: 100%;
}

.item .name {
  font-size: 12px;
}

.item .price {
  color: crimson;
  font-size: 12px;
  font-weight: bold;
}